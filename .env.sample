
# ===========================================
# Blockchain Monitor Configuration
# ===========================================

# ----- Logging -----
LOG_LEVEL=info

# ----- Retry Configuration -----
MAX_RETRIES=3
RETRY_DELAY=5
RATE_LIMIT=4

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=blockchain_monitor
DB_SSLMODE=disable

# ===========================================
# Kafka Configuration
# ===========================================
KAFKA_BROKER_ADDRESS=localhost:9092
KAFKA_TOPIC=blockchain-transactions
KAFKA_BATCH_SIZE=10
KAFKA_BATCH_TIMEOUT=5

# ===========================================
# Bitcoin Configuration
# ===========================================
BITCOIN_RPC_ENDPOINT=https://svc.blockdaemon.com/bitcoin/mainnet/native
BITCOIN_API_KEY=your_api_key_here
BITCOIN_RATE_LIMIT=4

# ===========================================
# Ethereum Configuration
# ===========================================
ETHEREUM_RPC_ENDPOINT=https://svc.blockdaemon.com/ethereum/mainnet/native
ETHEREUM_API_KEY=your_api_key_here
ETHEREUM_RATE_LIMIT=4

# ===========================================
# Solana Configuration
# ===========================================
SOLANA_RPC_ENDPOINT=https://svc.blockdaemon.com/solana/mainnet/native
SOLANA_API_KEY=your_api_key_here
SOLANA_WSS_ENDPOINT=wss://solana-mainnet.core.chainstack.com/your_api_key
SOLANA_RATE_LIMIT=4

