# Blockdaemon API Key
BLOCKDAEMON_API_KEY=your_api_key_here

# Bitcoin RPC Endpoint
BITCOIN_RPC_ENDPOINT=https://svc.blockdaemon.com/bitcoin/mainnet/native

# Ethereum RPC Endpoint
ETHEREUM_RPC_ENDPOINT=https://svc.blockdaemon.com/ethereum/mainnet/native

